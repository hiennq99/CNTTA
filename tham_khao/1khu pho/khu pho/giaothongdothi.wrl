#VRML V2.0 utf8
Sound {
      source AudioClip {
            url    "amthanh.wav"
            loop   TRUE
     }
     minFront 1140.0 #vung nghe ro
     minBack  1140.0
     maxFront 1180.0	#vung khong nghe
     maxBack  1180.0
     location 0 0 0 #vi tri phat
   }

Background {
    skyAngle	[ 0.075, 0.1, 0.2, 1.309, 1.5708 ]					   #  thiết lập
    skyColor	[ 1 1 0, .9 .9 .5, .7 .7 .9, 0 0.4 1, 0 0.7 1, 1 1 1 ] #  bầu trời
