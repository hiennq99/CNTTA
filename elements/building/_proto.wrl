#Hình hộp cơ bản
PROTO Wall [field SFColor color 0 0 0, field SFVec3f size 1 1 1, field SFFloat trans 0] {
	Shape {
		appearance Appearance {
			material Material {
				diffuseColor IS	color
				transparency IS	trans
			}
		}
		geometry Box {
			size IS	size
		}
	}
}
#Màu cầu thang
PROTO Bugge [field SFColor color 0.9 0.8 0.7, field SFVec3f size 1 1 1] {
	Shape {
		appearance Appearance {
			material Material {
				diffuseColor IS	color
			}
		}
		geometry Box {
			size IS	size
		}
	}
}
