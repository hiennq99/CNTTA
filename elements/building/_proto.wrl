#VRML V2.0 utf8
#Màu tường loại 1
PROTO Wall-1 [field SFVec3f size 1 1 1] {
	Shape {
		appearance Appearance {
			texture	ImageTexture {
				url	"../../images/wall-1.png"
				repeatS	TRUE
			}
		}
		geometry Box {
			size IS	size
		}
	}
}
