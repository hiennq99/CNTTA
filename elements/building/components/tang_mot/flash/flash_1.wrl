#VRML V2.0 utf8

Viewpoint {
	position 0 0 1
}

DEF CongTac Transform {
	#translation	9.65 2 -3
	children [
		Shape {
			appearance Appearance {
				material Material {
					diffuseColor 1 1 1
				}
			}
			geometry Box {
				size 0.05 0.2 0.3
			}
		}
		DEF Nut Transform {
			translation	-0.02 0.03 0.1
			#rotation 0 0 1 0.4
			rotation 0 0 0 0
			children [
				Shape {
					appearance Appearance {
						material Material {
							diffuseColor .38 .38 .42
							specularColor .53 .53 .53
							ambientIntensity .0933
							shininess .93
						}
					}
					geometry Box {
						size 0.04 0.04 0.04
					}
				}
				DEF	touch_1 TouchSensor	{
					enabled	TRUE
				}
			]
		}
	]
}
DEF	time_1 TimeSensor {
	cycleInterval 1
	loop FALSE
	enabled	FALSE
}
DEF	action_1 OrientationInterpolator {
	key	[0, 1]
	keyValue [0 1 0 0,0 1 0 3.14,0 1 0 6.28]
}
DEF	control Script {
	eventIn	SFBool turn
	eventOut SFBool	on
	eventOut SFBool	off
	field SFBool x TRUE
	url	"javascript:
	function turn(val){
		if(val){
			x=!x;
			if (x){
				on = true;
				off = false
			} else{
				on = false;
				off = true;
			}
		}
	}
	"
}
ROUTE touch_1.touchTime	TO time_1.startTime
ROUTE time_1.fraction_changed TO action_1.set_fraction
ROUTE action_1.value_changed TO	Nut.rotation